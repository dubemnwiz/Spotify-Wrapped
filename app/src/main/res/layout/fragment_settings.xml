<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsFragment"
    style="@style/SCREEN">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/settings_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:srcCompat="@mipmap/ic_launcher_round"
                >

            </ImageView>

            <TextView
                android:id="@+id/settings_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Android Studio"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                style="@style/TEXT"
                >

            </TextView>

            <TextView
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="androidstudio@android.com"
                android:textColor="#CCFFFFFF"
                android:textSize="12sp"
                android:visibility="invisible">

            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_accountinfo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_back_secondary_100"
                android:paddingStart="30dp"
                android:textAllCaps="false"
                android:text="Edit Account"
                android:textColor="@color/primary"
                android:paddingEnd="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:background="@drawable/round_back_white10_20"
                >

                <!-- Connect Spotify -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/spotifyConnectLayout"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/spotifyConnect"
                        android:layout_height="40dp"
                        android:src="@drawable/spotify_icon"
                        android:background="@drawable/round_back_spotify"
                        android:padding="12dp"
                        >

                    </ImageView>



                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Connect to Spotify"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/spotifyConnect"
                        style="@style/TEXT"
                        >
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >

                    </ImageView>


                </RelativeLayout>

                <!-- Dark Mode -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/nightModeIcon"
                        android:layout_height="40dp"
                        android:src="@drawable/night_mode_icon"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="12dp"
                        >

                    </ImageView>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Night Mode"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/nightModeIcon"
                        style="@style/TEXT"
                        >
                    </TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDarkMode"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:switchMinWidth="50dp"
                        android:theme="@style/nightMode"
                        >

                    </androidx.appcompat.widget.SwitchCompat>

                </RelativeLayout>

                <!-- Notifications-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/notificationsIcon"
                        android:layout_height="40dp"
                        android:src="@drawable/notifications_icon"
                        android:background="@drawable/round_back_notifications"
                        android:padding="12dp"
                        >

                    </ImageView>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Notifications"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/notificationsIcon"
                        >
                    </TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:switchMinWidth="50dp"
                        android:theme="@style/notifications"
                        >

                    </androidx.appcompat.widget.SwitchCompat>

                </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="15dp"
            android:background="@drawable/round_back_white10_20"
            >

            <!-- Contact Us Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/sendMessage"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_gallery"
                    android:background="@drawable/round_back_notifications"
                    android:padding="12dp"
                    >

                </ImageView>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Send us a message"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/sendMessage"
                    style="@style/TEXT"
                    >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                </ImageView>

            </RelativeLayout>

            <!-- Contact Us Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/aboutUs"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_gallery"
                    android:background="@drawable/round_back_notifications"
                    android:padding="12dp"
                    >

                </ImageView>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="About Us"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/aboutUs"
                    style="@style/TEXT"
                    >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                </ImageView>

            </RelativeLayout>

            <!-- Contact Us Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:id="@+id/FAQs"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_menu_gallery"
                    android:background="@drawable/round_back_notifications"
                    android:padding="12dp"
                    >

                </ImageView>
                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="FAQs"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/FAQs"
                    style="@style/TEXT"
                    >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    >

                </ImageView>

            </RelativeLayout>


        <!-- Logout -->
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="15dp"
                android:background="@drawable/round_back_white10_20"

                >

                <!-- Log Out-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/logoutButton"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:id="@+id/logout"
                        android:layout_height="40dp"
                        android:src="@drawable/logout_icon"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="12dp"
                        >

                    </ImageView>
                    <TextView
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_toEndOf="@+id/logout"
                        style="@style/TEXT"
                        >
                    </TextView>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_forward"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >
                    </ImageView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>




    </ScrollView>

    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TEXT"/>


    <Button
        android:id="@+id/btn_spotify"
        android:layout_width="408dp"
        android:layout_height="54dp"
        android:layout_marginBottom="576dp"
        android:text="Connect To Spotify"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp" />
</LinearLayout>