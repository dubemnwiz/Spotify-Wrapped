<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/spotifyGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/token_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            tools:text="Token:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_back_white10_20"
            android:orientation="vertical"
            android:padding="15dp"
            android:visibility="invisible">

            <Button
                android:id="@+id/token_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Connect to Spotify"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/code_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:visibility="gone"
                tools:text="Code:" />

            <Button
                android:id="@+id/code_btn"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Request Code"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/response_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:visibility="gone"
                tools:text="Line 1\nLine 2\nLine 3" />


            <Button
                android:id="@+id/load_top_data"
                android:layout_width="326dp"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="80dp"
                android:text="Generate your wrapped"
                android:textColor="#FFFFFF"
                android:visibility="invisible" />

            <Button
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="Spotify Profile Information"
                android:textColor="@color/white"
                android:visibility="invisible" />

            <Button
                android:id="@+id/backBtnSpotify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="@color/white"
                android:visibility="gone" />


        </LinearLayout>

        <Spinner
            android:id="@+id/range_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_range"
            android:visibility="invisible"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>